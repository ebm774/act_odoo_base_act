<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- LDAP User Synchronization Cron Job -->
        <record id="cron_sync_ldap_users_employee_id" model="ir.cron">
            <field name="name">LDAP Users Sync (with employeeId)</field>
            <field name="model_id" ref="base.model_res_users"/>
            <field name="state">code</field>
            <field name="code">model.cron_sync_ldap_users_with_employee_id()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="active">True</field>
            <field name="user_id" ref="base.user_root"/>
        </record>
    </data>
</odoo>